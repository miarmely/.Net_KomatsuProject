							<li>
								<a href="@sidebarMenu.Settings.Href">
									<i class="fa fa-cog"></i>
									<span>
										@sidebarMenu.Settings.Label
									</span>
								</a>
							</li>
							@*/settings*@
						</ul>            
					</div>
					<!-- sidebar menu end-->
				</div>
			</aside>
			<!--sidebar menu end-->

			<!--main content start-->
			<section id="main-content">
				<section class="wrapper">
					@RenderBody()
				</section>

				<!-- footer -->
				<div class="footer">
					<div class="wthree-copyright">
						<p>
							@footerInfos
							<a href="https://mostidea.com.tr">MostIdea</a>
						</p>
					</div>
				</div>
				<!-- / footer -->
			</section>
			<!--main content end-->
		</section>


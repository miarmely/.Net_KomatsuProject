		<!-- font-awesome icons -->
		<link href="~/css/font-awesome.css" rel="stylesheet">
		<!-- //font-awesome icons -->
		<script src="~/js/jquery2.0.3.min.js"></script>
		<script type="module" src="~/js/miarTools.js"></script>
		<script type="module" src="~/js/_layout.js"></script>
	</head>
	<body>
		<section id="container">
			<!-- header start -->
			<header class="header fixed-top clearfix">
				<!-- logo -->
				<div class="brand">
					<a href="index.html" class="logo">
						KOMATSU
					</a>
					<div class="sidebar-toggle-box">
						<div class="fa fa-bars"></div>
					</div>
				</div>
				<!-- /logo -->
				<div class="top-nav clearfix">
					<ul class="nav pull-right top-menu">
						<!-- search bar start -->
						<li>
							<input id="inpt_searchBar" type="text" class="form-control search" />
						</li>
						<!-- search bar end -->
						<!-- language dropdown -->
						<li class="dropdown">
							<!-- flag picture and language -->
							<a data-toggle="dropdown" class="dropdown-toggle" href="#">
								<img id="img_selectedFlag">
								<span id="spn_selectedLanguage" class="username"></span>
								<b class="caret"></b>
							</a>
							<!-- //flag picture and language -->
							<!-- language dropdown -->
							<ul id="ul_language" class="dropdown-menu extended logout">
							@{
								#region add languages to dropdown
								var flagPath = "";
									
								foreach(var languageInDb in allLanguagesInDb)
								{
									flagPath = $"{languageInDb}.png";

									<li>
										<a href="#">
											<img alt="@languageInDb" src="~/images/@flagPath" />
											<b>@languageInDb</b>
										</a>
									</li>
								}
								#endregion
								}
							</ul>
							<!-- //language dropdown -->
						</li>
						<!-- language dropdown -->
						<!-- user settings dropdown start -->
						<li class="dropdown">
							<a data-toggle="dropdown" class="dropdown-toggle" href="#">
								<img alt="" src="~/images/user.png">
								<span class="username">
									@ViewBag.FirstName.ToUpper() @ViewBag.LastName.ToUpper()
								</span>
								<b class="caret"></b>
							</a>
							<ul id="ul_userSettingsMenu" class="dropdown-menu extended logout">
							</ul>
						</li>
						<!-- user settings dropdown start -->
					</ul>
				</div>
			</header>
			<!--header end-->

			<!--sidebar menu start-->
			<aside>
				<div id="sidebar" class="nav-collapse">
					<!-- sidebar menu start-->
					<div class="leftside-navigation">
						<ul id="nav-accordion" class="sidebar-menu">
							@*homepage*@
							<li>
								<a id="a_sideBar_homepage" href="#" class="active">
									<i class="fa fa-dashboard"></i>
									<span></span>
								</a>
							</li>
							@*/homepage*@
							@*users*@
							<li class="sub-menu">
								<a href="javascript:;">
									<i class="fa fa-book"></i>
									<span></span>
								</a>
								<ul class="sub">
									<li>
										<a href="@sidebarMenu.Users.SubMenus.NewUser.Href">
											@sidebarMenu.Users.SubMenus.NewUser.Label
										</a>
									</li>
									<li>
										<a href="@sidebarMenu.Users.SubMenus.RegisteredUsers.Href">
											@sidebarMenu.Users.SubMenus.RegisteredUsers.Label
										</a>
									</li>
								</ul>
							</li>
							@*/users*@
							@*machines*@
							<li class="sub-menu">
								<a href="javascript:;">
									<i class="fa fa-book"></i>
									<span>

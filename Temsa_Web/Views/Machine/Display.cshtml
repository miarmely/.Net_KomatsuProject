<script>
	$(function () {
		let paginationButtonQuantity = 5;
		let ul_pagination = $("#ul_pagination");
		let lbl_entityQuantity = $("#lbl_entityQuantity");
		

		function updateEntityCountLabel() {
			lbl_entityQuantity.empty();
			lbl_entityQuantity.append(
				`<b>@ViewBag.MachineCountOnTable</b>/
				<b>@pageSize</b>
				makine görüntüleniyor`)
		}

		function addPaginationButtons() {
			//#region set buttonQauntity for pagination
			let buttonQuantity =
				"@ViewBag.TotalPage" < paginationButtonQuantity ?
					"@ViewBag.TotalPage"
					: paginationButtonQuantity
			//#endregion

			//#region reset paginationButtons if exists
			if (ul_pagination.children("li").length != 0)
				ul_pagination.empty()
			//#endregion

			//#region add paginationBack button
			if(buttonQuantity > 1
				&& "@pageNumber" > 1)  // shouldn't be first page
					ul_pagination.append(
						`<li>
							<a id="a_paginationBack" href="#" hidden>
								<i class="fa fa-chevron-left"></i>
							</a>
						</li>`);
			//#endregion

			//#region add pagination buttons
			for (let pageNo = 1; pageNo <= buttonQuantity; pageNo += 1)
				ul_pagination.append(
					`<li>
						<a href="#"> 
							${pageNo}
						</a>
					</li> `);
			//#endregion

			//#region add paginationNext button
			if (buttonQuantity > 1
				&& "@pageNumber" < "@ViewBag.TotalPage") // shouldn't be last page
					ul_pagination.append(
						`<li>
						<a id="a_paginationNext" href="#">
							<i class="fa fa-chevron-right"></i>
						</a>
					</li>`);
			//#endregion
		}


		updateEntityCountLabel()
		addPaginationButtons();
	})
</script>



@{
	Layout = "LoginAndRegisterLayout";
}

<div class="log-w3">
	<div class="w3layouts-main">
		<h2>GİRİŞ YAP</h2>
			<form>
				<input id="inpt_telNo" type="text" class="ggg" placeholder="TELEFON NUMARASI" required>
				<input id="inpt_password" type="password" class="ggg" placeholder="ŞİFRE" required>
				<span><input type="checkbox" /> Beni Hatırla</span>
				<h6><a href="#">Şifremi Unuttum?</a></h6>
					
				<div class="clearfix"></div>
				<input type="submit" value="Sign In" id="btn_login">
			</form>

			<p id="p_resultLabel" style="color:darkred; margin-bottom: 30px;">Error</p>
			<p>Bir hesabın yok mu?<a href="registration.html">Yeni oluştur</a></p>
	</div>
</div>
@model IServiceManager

@{
    var language = ViewBag.Language;

    #region set elements by languages
    
    #region set table title
    var tableTitle = language switch
    {
        "TR" => "KAYITLI KULLANICILAR",
        "EN" => "REGISTERED USERS"
    };
    #endregion

    #region set menubar options
    var menubarOptions = language switch
    {
        "TR" => new string[]
        {
            "Seçilenleri Sil"
        },
        "EN" => new string[]
        {
            "Delete Selected"
        }
    };
    #endregion

    #region set column ids and names
    var columnIdsAndNamesDict = language switch
    {
        "TR" => new Dictionary<string, string>
        {
            { "th_firstName", "Ad" },
            { "th_lastName", "Soyad" },
            { "th_companyName", "Şirket" },
            { "th_telNo", "Telefon" },
            { "th_email", "Email" },
            { "th_roleNames", "Rol" },
            { "th_createdAt", "Kayıt Tarihi" },
            { "th_processes", "İşlemler" },
        },
        "EN" => new Dictionary<string, string>
        {
            { "th_firstName", "First Name" },
            { "th_lastName", "Last Name" },
            { "th_companyName", "Company" },
            { "th_telNo", "Phone" },
            { "th_email", "Email" },
            { "th_roleNames", "Role" },
            { "th_createdAt", "Registered Date" },
            { "th_processes", "Processes" },
        },
    };
    #endregion

    #region set entity quantity message
    var entityQuantityMessage = language switch
    {
        "TR" => "kullanıcı gösteriliyor",
        "EN" => "user displaying"
    };
    #endregion

    #region set button names

    #region set menubar options button name
    var menubarOptionsButton = language switch
    {
        "TR" => "Uygula",
        "EN" => "Apply"
    };
    #endregion

    #region set update button name
    var updateButtonName = language switch
    {
        "TR" => "Güncelle",
        "EN" => "Update",
    };
    #endregion

    #endregion    

    #endregion
}

<div class="table-agile-info">
    <div class="panel panel-default">
        @*title*@
        <div class="panel-heading">
            @tableTitle
        </div>
        @*/title*@

        @*table menubar*@
        <div class="row w3-res-tb">
            @*options*@
            <div class="col-sm-5 m-b-xs">
				<select id="slct_menubar" class="input-sm form-control w-sm inline v-middle">
					@{
                        #region add <options> to menubar
                        for(var index=0; index < menubarOptions.Length; index++)
                        {
                            <option value=@index>
                                @menubarOptions[index]
                            </option>    
                        }
                        #endregion
                    }
				</select>
				<button id="btn_apply" class="btn btn-sm btn-default">
                    @menubarOptionsButton
                </button>                
            </div>
            @*/options*@
            <div class="col-sm-4">
            </div>
			@*search bar*@
            @*<div class="col-sm-3">
				<div class="input-group">
					<input type="text" class="input-sm form-control" placeholder="Ara">
					<span class="input-group-btn">
						<button class="btn btn-sm btn-default" type="button">
							Ara
						</button>
					</span>
				</div>
            </div>*@
			@*/search bar*@
        </div>
        @*/table menubar*@

        @*/data*@
        <div class="table-responsive">
            <table id="tbl_user" class="table table-striped b-t b-light">
                <thead>
                    <tr>
                        <th style="width:20px;">
                            <label class="i-checks m-b-none">
								<input id="box_all" type="checkbox"><i></i>
                            </label>
                        </th>
                        @{
                            #region add column names
                            foreach(var columnId in columnIdsAndNamesDict.Keys)
                            {
                                <th id="@columnId">
                                    <b>@columnIdsAndNamesDict[columnId]</b>
                                </th> 
                            }
                            #endregion
                        }
                        <th style="width:30px;"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        @*/data*@

        @*/navigation*@
        <footer class="panel-footer">
            <div class="row">
                <div class="col-sm-5 text-left">
                    <small id="lbl_entityQuantity" class="text-muted inline m-t-sm m-b-s">
						<b>0</b> @entityQuantityMessage
					</small>
                </div>
                <div class="col-sm-7 text-right text-center-xs">                
                    <ul id="ul_pagination" class="pagination pagination-sm m-t-none m-b-none">
                    </ul>
                </div>
            </div>
        </footer>
        @*/navigation*@
    </div>
</div>

<script type="module" src="~/js/userForDisplay.js"></script>


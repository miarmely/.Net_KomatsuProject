	<div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header id="header_tableTitle" class="panel-heading"></header>
                <div class="panel-body" style="text-align:center">
                    <div id="div_sliders">
                        <img id="img_sliders"/>
                        <div style="margin-top:5px">
                            <span id="spn_fileStatusLabel"></span>
                        </div>
                        <div style="margin-top:30px;">
                            <button id="btn_previous" style="background-color: darkblue" hidden>
                                <img src="~/images/prev.png" alt="previous"/>
                            </button>
                            <button id="btn_sliderNo" style="margin-left:15px; margin-right:15px; background-color: darkblue; color:white" disabled>
                            </button>
                            <button id="btn_next" style="background-color: darkblue">

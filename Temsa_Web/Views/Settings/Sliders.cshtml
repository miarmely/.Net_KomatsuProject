<div class="form-w3layouts">
	<div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    SLIDERS
                </header>
                <div class="panel-body" style="text-align:center">
                    <div id="div_sliders">
                        <img id="img_sliders"/>

                        <div style="margin-top:30px;">
                            <button id="btn_previous">
                                <img src="~/images/prev.png" alt="previous"/>
                            </button>
                            <button style="margin-left:15px; margin-right:15px"; disabled>1/10</button>
                            <button id="btn_next">
                                <img src="~/images/next.png" alt="next"/>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3" style="margin-top:50px">
                        <div>
                            <label for="inpt_chooseFile" class="form-label" style="float:left">Choose Picture</label>
                            <input id="inpt_chooseFile" type="file" class="form-control" accept="image/*"/>
                        </div>
                        <div style="text-align:center; margin-top:30px">
                            <button id="btn_add" class="btn btn-danger" style="background-color: darkblue">Save</button>
                            <button id="btn_remove" class="btn btn-danger">Remove</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script type="module" src="~/js/sliders.js"></script>

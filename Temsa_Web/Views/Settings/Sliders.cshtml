<div class="form-w3layouts">
	<div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    SLIDERS
                </header>
                <div class="panel-body" style="text-align:center">
                    <div id="div_img">
                        <button id="btn_previous">
                            <img src="~/images/prev.png" alt="previous"/>
                        </button>
                        <img src="~/images/user.png" alt="user" width="500" heigth="500" style="margin-left:30px; margin-right:30px"/>
                        <button id="btn_next" style="text-align:center">
                            <img src="~/images/next.png" alt="next"/>

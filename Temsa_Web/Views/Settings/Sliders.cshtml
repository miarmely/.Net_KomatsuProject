                                <button id="btn_chooseFile" class="btn btn-danger" style="background-color: goldenrod">
                                    Resim Seç
                                </button>
                                <input id="inpt_selectedFile" type="text" style="width:50%" disabled>
                                <button id="btn_remove" class="btn btn-danger">
                                </button>
                            </div>
                            <div hidden>
                                <input hidden id="inpt_chooseFile" type="file" accept="image/*"/>
                            </div>
                        </div>
                        <div style="margin-top:60px">
                            <span id="spn_resultLabel"></span>
                        </div>
                        <div style="text-align:center; margin-top:30px">
                            <button id="btn_save" class="btn btn-danger" style="background-color: darkblue; font-size:17px;"></button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

